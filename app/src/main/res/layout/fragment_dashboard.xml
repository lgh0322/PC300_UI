<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <ImageView
        android:src="@drawable/top_bg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="88dp"/>
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Dashboard"
        android:fontFamily="@font/pingfang_sc_bold"
        android:layout_marginTop="54dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <LinearLayout

        android:orientation="vertical"
        android:gravity="top|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:fontFamily="@font/pingfang_sc_bold"
            android:id="@+id/text_home"
            android:textColor="#FF2727"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="104dp"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_marginTop="16dp"
           android:layout_height="204dp">
           <com.bigkoo.convenientbanner.ConvenientBanner
               android:id="@+id/banner"
               android:elevation="0dp"
               android:layout_height="match_parent"
               android:layout_width="match_parent"
               app:canLoop="true" />
           <LinearLayout
               android:elevation="30dp"
               android:id="@+id/dot_layout"
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:layout_gravity="center"
               android:gravity="center"
               android:orientation="horizontal"
               app:layout_constraintBottom_toBottomOf="@+id/banner"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent" />
       </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/say_text"
            android:layout_marginTop="24dp"
            android:text="Prepare cotton swabs, alcohol wipes, blood collection needles, test strips, blood glucose detectors."   android:textSize="14sp"
            android:textColor="#6B7280"
            android:fontFamily="@font/pingfang_sc_bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>





    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="343dp"
        android:id="@+id/main_view"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/data_bg"
        android:layout_height="157dp">

        <TextView
            android:text="Blood Glucose"
            android:textSize="16sp"
            android:textColor="#1C2431"
            android:fontFamily="@font/pingfang_sc_bold"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/blood_glucose"
            android:text="90"
            android:textSize="24sp"
            android:textColor="#022964"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:text="mmol/L"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:fontFamily="@font/pingfang_sc_bold"
            android:layout_marginStart="4dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/blood_glucose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="#F3F3F3"
            android:layout_marginTop="79dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="311dp"
            android:layout_height="1dp"/>

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#1C2431"
            android:text="Measurement"
            android:layout_marginTop="91dp"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/pingfang_sc_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/x2"
        android:layout_width="164dp"
        android:layout_height="91dp"
        android:layout_marginTop="277dp"
        android:background="@drawable/data_bg"
        app:layout_constraintStart_toStartOf="@+id/main_view"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/pingfang_sc_bold"
            android:text="Ketone Bodies"
            android:textColor="#1C2431"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ketone_bodies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="33dp"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:text="7.1"
            android:textColor="#022964"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/pingfang_sc_bold"
            android:text="mmol/L"
            android:textColor="#6B7280"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/ketone_bodies"
            app:layout_constraintTop_toTopOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/x3"
        android:layout_width="164dp"
        android:layout_marginTop="277dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/main_view"
        android:background="@drawable/data_bg"
        android:layout_height="91dp">

        <TextView
            android:text="Blood Glucose"
            android:textSize="16sp"
            android:textColor="#1C2431"
            android:fontFamily="@font/pingfang_sc_bold"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/blood_glucosex"
            android:text="90"
            android:textSize="24sp"
            android:textColor="#022964"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:text="mmol/L"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:fontFamily="@font/pingfang_sc_bold"
            android:layout_marginStart="4dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/blood_glucosex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="main_view,x2,x3" />
</androidx.constraintlayout.widget.ConstraintLayout>